<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="echo" class="org.codehaus.xfire.spring.remoting.XFireClientFactoryBean">
        <property name="serviceInterface">
          <value>org.slosc.wsdl2rest.samples.StockQuoteService</value>
        </property>
        <property name="wsdlDocumentUrl">
          <value>http://localhost:8080/stockquoteservice/StockQuoteService?wsdl</value>
        </property>
        <property name="serviceName" value="stockQuoteService"/>

    </bean>

</beans>